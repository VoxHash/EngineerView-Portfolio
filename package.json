{
  "name": "voxhash.dev",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "postinstall": "node -e \"require('child_process').exec('tailwindcss -v', (e) => { if(e) console.log('Tailwind will be run via PostCSS'); })\"",
    "generate-resume": "node scripts/generate-resume-pdf.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "analyze": "ANALYZE=true next build",
    "lighthouse": "lhci autorun",
    "lighthouse:ci": "lhci autorun --upload.target=temporary-public-storage",
    "check:metrics": "tsx scripts/check-metrics.ts",
    "security:audit": "tsx scripts/security-audit.ts",
    "metrics:all": "npm run test:coverage && npm run security:audit && npm run check:metrics",
    "type-coverage": "type-coverage --detail"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.0.0",
    "@mdx-js/react": "^3.0.0",
    "@next/mdx": "^14.2.33",
    "@types/nodemailer": "^7.0.1",
    "@types/puppeteer": "^5.4.7",
    "@vercel/og": "^0.6.2",
    "clsx": "2.1.1",
    "date-fns": "^3.6.0",
    "framer-motion": "^11.0.0",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.400.0",
    "next": "^14.2.33",
    "next-themes": "^0.2.1",
    "nodemailer": "^7.0.7",
    "puppeteer": "^24.22.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-intersection-observer": "^9.8.1",
    "react-use": "^17.4.2",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.0",
    "remark-prism": "^1.3.0",
    "resend": "^6.1.0",
    "web-vitals": "^3.5.0"
  },
  "devDependencies": {
    "@types/node": "20.11.19",
    "@types/react": "18.2.66",
    "@types/react-dom": "18.2.22",
    "@types/jest": "^29.5.12",
    "autoprefixer": "10.4.17",
    "eslint": "8.57.0",
    "eslint-config-next": "^14.2.33",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "8.4.35",
    "prettier": "^3.2.5",
    "tailwindcss": "3.4.3",
    "typescript": "5.4.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.5.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@next/bundle-analyzer": "^14.2.33",
    "tsx": "^4.7.0",
    "@lhci/cli": "^0.12.0"
  }
}
